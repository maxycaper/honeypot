<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/neon_magenta"
                android:centerColor="@color/neon_hot_pink"
                android:endColor="@color/neon_magenta"
                android:type="linear" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/neon_purple"
                android:centerColor="@color/neon_indigo"
                android:endColor="@color/neon_purple"
                android:type="linear" />
            <corners android:radius="50dp" />
        </shape>
    </item>
</selector> 