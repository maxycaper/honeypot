<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item android:bottom="3dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#353535" />
                    <corners android:radius="12dp" />
                    <stroke android:width="1.5dp" android:color="@color/neon_hot_pink" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default state -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item android:bottom="3dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/card_background" />
                    <corners android:radius="12dp" />
                    <stroke android:width="1.5dp" android:color="@color/neon_purple" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector> 