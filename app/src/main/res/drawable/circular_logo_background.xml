<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent outer layer for spacing -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <size android:width="140dp" android:height="140dp" />
        </shape>
    </item>
    <!-- Neon purple glow -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#bb0ffe" />
            <size
                android:width="132dp"
                android:height="132dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="66dp"
                android:startColor="#bb0ffe"
                android:endColor="#00ffffff" />
        </shape>
    </item>
    <!-- Solid neon purple inner circle -->
    <item
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp">
        <shape android:shape="oval">
            <solid android:color="#bb0ffe" />
        </shape>
    </item>
</layer-list>
