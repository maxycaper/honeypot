<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent outer layer for spacing -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <size
                android:width="180dp"
                android:height="180dp" />
        </shape>
    </item>
    <!-- Cyan glow effect -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="90dp"
                android:startColor="#005CFFFF"
                android:centerColor="#205CFFFF"
                android:endColor="#005CFFFF" />
        </shape>
    </item>
    <!-- Neon purple glow -->
    <item
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp">
        <shape android:shape="oval">
            <solid android:color="#bb0ffe" />
            <size
                android:width="170dp"
                android:height="170dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="85dp"
                android:startColor="#bb0ffe"
                android:endColor="#00ffffff" />
        </shape>
    </item>
    <!-- Solid neon purple inner circle -->
    <item
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp">
        <shape android:shape="oval">
            <solid android:color="#bb0ffe" />
        </shape>
    </item>
</layer-list>
