<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#507A3CB5" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Middle layer - slight gradient -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#252525"
                android:endColor="#202020"
                android:angle="270" />
            <corners android:radius="11dp" />
        </shape>
    </item>
    
    <!-- Actual border with inner padding for the glow effect -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#2A2A2A" />
            <stroke
                android:width="1.5dp"
                android:color="@color/neon_purple" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list> 