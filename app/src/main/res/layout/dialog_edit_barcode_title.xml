<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/surface_dark"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/surface_dark">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lora"
            android:gravity="center"
            android:text="Edit Barcode Title"
            android:textColor="@color/neon_purple"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/card_background"
            android:hint="Enter barcode title"
            android:inputType="textCapSentences"
            android:padding="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />

        <TextView
            android:id="@+id/barcode_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/neon_hot_pink"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/barcode_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_edit_title_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_gradient"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="none"
                android:minWidth="80dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp" />

            <Button
                android:id="@+id/btn_edit_title_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_gradient"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="none"
                android:minWidth="80dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 